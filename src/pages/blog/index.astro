---
// 1. 必要なモジュールをインポート
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

// 2. 全記事を取得して日付降順ソート
const allPosts = await getCollection('blog');
const posts = allPosts.sort(
  (a, b) =>
    new Date(b.data.pubDate).valueOf() -
    new Date(a.data.pubDate).valueOf()
);

// 3. カテゴリ（keyword）ごとにグルーピング
const postsByCategory = posts.reduce((acc, post) => {
  // frontmatter に category を追加していればそちらを使う
  // まだ追加していない場合は title を代用
  const cat = post.data.category || post.data.title;
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(post);
  return acc;
}, /** @type Record<string, typeof posts> */({}));

// 4. 各カテゴリ内も日付降順にしておく（念のため）
for (const cat of Object.keys(postsByCategory)) {
  postsByCategory[cat].sort(
    (a, b) =>
      new Date(b.data.pubDate).valueOf() -
      new Date(a.data.pubDate).valueOf()
  );
}
---

<!doctype html>
<html lang="ja">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main { width: 960px; margin: auto; }
      h2 { margin-top: 2rem; font-size: 1.5rem; }
      ul { display: flex; flex-wrap: wrap; gap: 1.5rem; list-style: none; padding: 0; }
      li { width: calc(50% - .75rem); }
      li img { width: 100%; height: auto; border-radius: 8px; }
      .title { margin: .5rem 0 .25rem; font-size: 1.2rem; }
      .date { color: #666; font-size: .9rem; }
      @media (max-width:720px) {
        li { width: 100%; }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      {/*
         カテゴリごとにセクションを作成
         Object.entries で [カテゴリ名, 記事配列] の順でループ
      */}
      {Object.entries(postsByCategory).map(([category, posts]) => (
        <section>
          <h2>{category}</h2>
          <ul>
            {posts.map((post) => (
              <li>
                <a href={`/blog/${post.slug}/`}>
                  {/*
                     heroImage があれば表示、
                     なければフォールバック用画像(/placeholder.png)を出す
                  */}
                  <img
                    src={post.data.heroImage ?? '/placeholder.png'}
                    alt={post.data.title}
                  />
                  <h3 class="title">{post.data.title}</h3>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))}
          </ul>
        </section>
      ))}
    </main>
    <Footer />
  </body>
</html>
